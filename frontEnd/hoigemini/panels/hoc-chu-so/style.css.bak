.hoc-chu-so-container { width:100%; display:flex; flex-direction:column; gap:12px; padding:6px; }
.hoc-chu-so-container header { text-align:center; margin-bottom:8px; }
.hoc-chu-so-container header h1 { font-family:'Fredoka One',cursive;color:#4a6bff;font-size:1.25rem; }
.hoc-chu-so-container .audio-section { display:flex; justify-content:center; align-items:center; height:48px; }
.hoc-chu-so-container .audio-btn { background: linear-gradient(to right, #4a6bff, #5b75ff); color:white; border:none; border-radius:40px; padding:8px 18px; font-weight:600; }
.hoc-chu-so-container .image-section { padding:6px; display:flex; justify-content:center; }
.hoc-chu-so-container .image-wrapper { max-width:520px; height:270px; border-radius:12px; overflow:hidden; }
.hoc-chu-so-container #numberImage { width:100%; height:100%; object-fit:cover; }
.hoc-chu-so-container .numbers-container { display:flex; gap:12px; padding:6px; overflow-x:auto; }
.hoc-chu-so-container .number-btn { background:white; border:2px solid #4a6bff; border-radius:10px; width:48px; height:48px; font-weight:800; color:#4a6bff; }
@media (max-width:768px){ .hoc-chu-so-container .image-wrapper { height:220px; }}